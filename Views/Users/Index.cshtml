@model List<User>

@{
    ViewBag.Title = "Список пользователей";
}
   
    <a asp-action="Create" asp-controller="Users">добавить пользоватея</a>

    <table class="table">
        <tr><th>Email</th></tr>
        @foreach(var i in Model){
        <tr>
            <td>@i.Email</td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@i.Id">
                    <a class="btn btn-primary" asp-action ="Edit" asp-route-id="@i.Id">Изменить</a>
                         <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@i.Id">Сменить пароль</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                </form>
            </td>
        </tr>
        
        }
    </table>
